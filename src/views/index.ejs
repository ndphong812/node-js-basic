<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/scss/style.css">
    <title>Document</title>
</head>

<body>
    <div class="topnav">
        <a class="active" href="#home">Home</a>
        <a href="#news">News</a>
        <a href="#contact">Contact</a>
        <a href="#about">About</a>
    </div>
    <table id="customers">
        <tr>
            <th>ID</th>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Email</th>
            <th>Address</th>
            <th>Action</th>
        </tr>
        <% for (let i=0; i < dataUser.length; i++) { %>
            <tr>
                <td>
                    <%= dataUser[i].id %>
                </td>
                <td>
                    <%= dataUser[i].firstName %>
                </td>
                <td>
                    <%= dataUser[i].lastName %>
                </td>
                <td>
                    <%= dataUser[i].email %>
                </td>
                <td>
                    <%= dataUser[i].address %>
                </td>
                <td>
                    <button type="button">
                        <a href="/detail/user/<%=dataUser[i].id%>">
                            Detail
                        </a>
                    </button>
                    <form class="form-delete" action="/edit-user/<%=dataUser[i].id%>" method="get">
                        <input type="hidden" name="id" value="<%=dataUser[i].id%>" />
                        <button type="submit">Edit</button>
                    </form>
                    <form class="form-delete" action="/delete-user" method="post">
                        <input type="hidden" name="id" value="<%=dataUser[i].id%>" />
                        <button type="submit">Delete</button>
                    </form>
                </td>
            </tr>
            <% } %>
    </table>
    <form class="form" action="/add-new-user" method="post">
        <div class="input-box">
            <label>
                First Name
            </label>
            <input type="text" name="firstName" />
        </div>
        <div class="input-box">
            <label>
                Last Name
            </label>
            <input type="text" name="lastName" />
        </div>
        <div class="input-box">
            <label>
                Email
            </label>
            <input type="email" name="email" />
        </div>
        <div class="input-box">
            <label>
                Address
            </label>
            <input type="text" name="address" />
        </div>
        <input class="submit" type="submit" value="Submit" />
    </form>
</body>

</html>